<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@android:color/white">


        <LinearLayout
            android:layout_centerVertical="true"
            android:id="@+id/SignUpActivtiy"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:orientation="vertical" >

            <ImageView
                android:id="@+id/imageView1"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_gravity="center_horizontal"
                android:layout_weight="1"
                android:src="@drawable/intro_bg" />

            <EditText
                android:id="@+id/reg_email_edittext"
                android:layout_width="250dp"
                android:layout_height="40dp"
                android:layout_gravity="center_horizontal"
                android:layout_margin="5dp"
                android:layout_weight="1"
                android:background="@drawable/edittext_background_white"
                android:ems="10"
                android:hint="E-mail"
                android:inputType="textEmailAddress"
                android:paddingLeft="5dp"
                android:textColor="#FBC261"
                android:textColorHint="#FBC261" >
            </EditText>

            <EditText
                android:id="@+id/reg_password_edittext"
                android:layout_width="250dp"
                android:layout_height="40dp"
                android:layout_gravity="center_horizontal"
                android:layout_margin="5dp"
                android:layout_weight="1"
                android:background="@drawable/edittext_background_white"
                android:ems="10"
                android:hint="Password"
                android:inputType="textPassword"
                android:paddingLeft="5dp"
                android:textColor="#FBC261"
                android:textColorHint="#FBC261" >
            </EditText>

            <EditText
                android:id="@+id/reg_birthday_edittext"
                android:layout_width="250dp"
                android:layout_height="40dp"
                android:layout_gravity="center_horizontal"
                android:layout_margin="5dp"
                android:layout_weight="1"
                android:background="@drawable/edittext_background_white"
                android:ems="10"
                android:hint="Birthday"
                android:inputType="date"
                android:paddingLeft="5dp"
                android:textColor="#FBC261"
                android:textColorHint="#FBC261" >
            </EditText>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_gravity="center_horizontal"
                android:layout_weight="1" >

                <Button
                    android:id="@+id/image_gen_male"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:background="@drawable/btn_male_selector" 
                    android:layout_margin="4dp"/>

                <Button
                    android:id="@+id/image_gen_female"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:background="@drawable/btn_female_selector" 
                    android:layout_margin="4dp"/>
                
            </LinearLayout>

            <Button
                android:id="@+id/sign_up_btn"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_gravity="center_horizontal"
                android:layout_margin="20dp"
                android:layout_weight="1"
                android:background="@drawable/happy_pictoliking_selector" />
        </LinearLayout>


</RelativeLayout>